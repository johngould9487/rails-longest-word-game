<div class="container">
  <h1>New Game</h1>
  <div class="letter-holder">
    <% @letters.each do |letter| %>
    <div class="boxed-letter">
      <h3><%= letter.upcase %></h3>
    </div>
    <% end %>
  </div>
  <form class="form form-inline" action="/score" method="post">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
    <input class="form-control mb-2 mr-sm-2" type="text" name="guess" placeholder="What is your word?">
    <input type="submit" class="btn btn-primary mb-2">
  </form>
</div>
